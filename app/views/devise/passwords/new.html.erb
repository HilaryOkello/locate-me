<div class="max-w-md mx-auto p-6">
  <div class="text-center mb-8">
    <h2 class="text-2xl font-bold text-indigo-700">Forgot Your Password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email", 
            class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Send me reset password instructions", 
            class: "w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 cursor-pointer" %>
    </div>
  <% end %>

  <div class="border-t pt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>