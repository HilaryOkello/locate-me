<div class="max-w-md mx-auto p-6">
  <div class="text-center mb-8">
    <h2 class="text-2xl font-bold text-indigo-700">Edit Profile</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-sm text-indigo-600">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
      <p class="text-sm text-gray-500 mt-1">Leave blank if you don't want to change it</p>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500"><em><%= @minimum_password_length %> characters minimum</em></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded" %>
      <p class="text-sm text-gray-500 mt-1">We need your current password to confirm changes</p>
    </div>

    <div class="mb-6">
      <%= f.submit "Update", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 cursor-pointer" %>
    </div>
  <% end %>

  <div class="border-t pt-6">
    <h3 class="text-lg font-medium mb-2">Cancel Account</h3>
    <%= button_to "Cancel my account", registration_path(resource_name), 
        data: { confirm: "Are you sure?" }, 
        method: :delete,
        class: "text-red-600 hover:text-red-800 text-sm" %>
  </div>

  <div class="mt-4">
    <%= link_to "Back", :back, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>
</div>