<div class="max-w-md mx-auto p-6">
  <div class="text-center mb-8">
    <h2 class="text-2xl font-bold text-indigo-700">Sign Up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, "Username", class: "block text-gray-700 mb-1" %>
      <%= f.text_field :name, autocomplete: "name", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 cursor-pointer" %>
    </div>
  <% end %>

  <div class="border-t pt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>